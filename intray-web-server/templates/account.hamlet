<section .section>
  <div .columns .is-centered>
    <div .column .is-half .content>
      <h1 .title .is-3 .has-text-weight-semibold .has-text-centered>
        Account

        ^{accountInfoWidget}


  <div .columns .is-centered>
    <div .column .is-half .content>
      <h2 .title .is-4>
        Danger Zone

      <p>
        <a .button href=@{AuthR changePasswordTargetR}>
          Change password
      <p>
        <a .button href=@{AccessKeysR}>
          Manage Access Keys
      <p>
        <form
          method=post
          action=@{AccountDeleteR}>
          ^{token}
          <button
            .is-danger .button .my-1
            type=submit
            onclick="return confirm('Are you sure you want to delete your account? This cannot be undone.');">
            Delete account

  ^{adminSegment mai}
